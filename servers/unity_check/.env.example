# MCPエディタ統合サーバー環境変数設定

# プロジェクトのルートディレクトリ
# デフォルト: カレントワーキングディレクトリ
PROJECT_ROOT=

# 監査ログの出力先
# デフォルト: ./logs/audit.log
LOG_PATH=./logs/audit.log

# 最大同時リクエスト数
# デフォルト: 10
MAX_CONCURRENT_REQUESTS=10

# デフォルトタイムアウト（ミリ秒）
# デフォルト: 60000 (60秒)
DEFAULT_TIMEOUT=60000

# 最大ファイルサイズ（バイト）
# デフォルト: 10485760 (10MB)
MAX_FILE_SIZE=10485760

# バックアップ保存期間（日）
# デフォルト: 7
BACKUP_RETENTION_DAYS=7

# ファイルあたりの最大バックアップ世代数
# デフォルト: 10
MAX_BACKUP_GENERATIONS=10

# ログレベル
# デフォルト: info
# 選択肢: error, warn, info, debug
LOG_LEVEL=info
